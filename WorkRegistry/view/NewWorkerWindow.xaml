<Window x:Class="WorkRegistry.view.NewWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkRegistry.view"
        mc:Ignorable="d"
        Title="NewWorkerWindow" Height="218.112" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label>Név:</Label>
        <TextBox Grid.Column="1" Margin="0,0,0,10" Name="WorkerNameTB" />
        <Label Grid.Row="1">E-mail:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Name="WorkerEmailTB" />
        <Label Grid.Row="2">Megjegyzés:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" AcceptsReturn="True" Name="WorkerCommentTB" />

        <Button Grid.Row="3" Grid.Column="1" Click="AddNewWorker">Ok</Button>
    </Grid>
</Window>
